    cyan "========================================"
    cyan "  VLESS Reality ç»ˆæå®Œæ•´ç‰ˆ"
    cyan "========================================"
    echo ""
    
    detect_system
    install_dependencies
    get_server_ip
    select_reality_target
    install_xray
    generate_keys
    configure_xray_server
    create_systemd_service
    configure_firewall
    generate_client_configs
    optimize_system
    create_monitoring
    create_management_tools
    
    green "\n========================================"
    green "  VLESS Reality å®‰è£…æˆåŠŸ! âœ…"
    green "========================================"
    echo ""
    cyan "æœåŠ¡å™¨ä¿¡æ¯:"
    echo "  IP: $SERVER_IP"
    echo "  ç«¯å£: $LISTEN_PORT"
    echo "  UUID: $USER_UUID"
    echo "  Flow: xtls-rprx-vision"
    echo ""
    cyan "è¿æ¥é“¾æ¥:"
    cat "$CLIENT_DIR/share-link.txt"
    echo ""
    cyan "ç®¡ç†å‘½ä»¤:"
    echo "  vless-mgr status    # æŸ¥çœ‹çŠ¶æ€"
    echo "  vless-mgr qr        # æ˜¾ç¤ºäºŒç»´ç "
    echo "  vless-mgr config    # æ˜¾ç¤ºé…ç½®"
    echo ""
    yellow "äºŒç»´ç :"
    qrencode -t ANSIUTF8 < "$CLIENT_DIR/share-link.txt"
    echo ""
    green "å®‰è£…å®Œæˆ! ğŸš€"
    echo "è¯¦ç»†ä¿¡æ¯: cat $CLIENT_DIR/README.txt"
    echo "========================================"
}

