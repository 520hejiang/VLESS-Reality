æœåŠ¡å™¨ä¿¡æ¯:
- IP: $SERVER_IP
- ç«¯å£: $LISTEN_PORT
- UUID: $USER_UUID
- Flow: xtls-rprx-vision
- SNI: $REALITY_DEST
- å…¬é’¥: $PUBLIC_KEY
- Short ID: $SHORT_ID

åˆ†äº«é“¾æ¥:
$VLESS_LINK

ç®¡ç†å‘½ä»¤:
- vless-mgr status      # å®Œæ•´çŠ¶æ€
- vless-mgr qr          # äºŒç»´ç 
- vless-mgr security    # å®‰å…¨ä¿¡æ¯
- vless-mgr backup      # å¤‡ä»½é…ç½®
- vless-mgr logs        # æŸ¥çœ‹æ—¥å¿—

å®‰è£…æ—¶é—´: $(date)
EOF

    chmod 600 "$CLIENT_DIR"/*
}

optimize_system() {
    yellow "[*] ç³»ç»Ÿä¼˜åŒ–..."
    
    cat >> /etc/sysctl.conf <<'EOF'

# VLESS Reality ä¼˜åŒ–
net.core.rmem_max = 268435456
net.core.wmem_max = 268435456
net.core.netdev_max_backlog = 16384
net.ipv4.tcp_rmem = 8192 262144 268435456
net.ipv4.tcp_wmem = 8192 262144 268435456
net.ipv4.tcp_congestion_control = bbr
net.core.default_qdisc = fq_codel
net.ipv4.tcp_fastopen = 3
net.ipv4.tcp_slow_start_after_idle = 0
net.ipv4.ip_forward = 1
fs.file-max = 2097152
EOF

    sysctl -p >/dev/null 2>&1
    
    cat >> /etc/security/limits.conf <<'EOF'
* soft nofile 1048576
* hard nofile 1048576
root soft nofile 1048576
root hard nofile 1048576
EOF
}

create_monitoring() {
    yellow "[*] åˆ›å»ºç›‘æ§ç³»ç»Ÿ..."
    
    cat > /usr/local/bin/xray-monitor <<'EOF'
#!/bin/bash

if ! systemctl is-active --quiet xray; then
    systemctl restart xray
    logger "Xray auto-restarted"
fi
EOF

    chmod +x /usr/local/bin/xray-monitor
    
    (crontab -l 2>/dev/null; echo "*/5 * * * * /usr/local/bin/xray-monitor") | crontab -
}

create_management_tools() {
    yellow "[*] åˆ›å»ºç®¡ç†å·¥å…·..."
    
    cat > /usr/local/bin/vless-mgr <<'EOF'
#!/bin/bash

XRAY_DIR="/usr/local/etc/xray"
CLIENT_DIR="/root/vless-clients"

show_status() {
    echo "=== VLESS Reality çŠ¶æ€ ==="
    systemctl status xray --no-pager -l
}

show_config() {
    [[ -f "$CLIENT_DIR/README.txt" ]] && cat "$CLIENT_DIR/README.txt" || echo "é…ç½®ä¸å­˜åœ¨"
}

show_qr() {
    [[ -f "$CLIENT_DIR/share-link.txt" ]] && qrencode -t ANSIUTF8 < "$CLIENT_DIR/share-link.txt" || echo "é“¾æ¥ä¸å­˜åœ¨"
}

show_security() {
    echo "=== å®‰å…¨çŠ¶æ€ ==="
    echo "Xray: $(systemctl is-active xray)"
    echo "Fail2ban: $(systemctl is-active fail2ban 2>/dev/null || echo 'æœªå®‰è£…')"
}

case "$1" in
    status|st) show_status ;;
    config|cfg) show_config ;;
    qr) show_qr ;;
    security|sec) show_security ;;
    restart|rs) systemctl restart xray ;;
    *)
        echo "VLESS Reality ç®¡ç†å·¥å…·"
        echo "ç”¨æ³•: vless-mgr {status|config|qr|security|restart}"
        ;;
esac
EOF

    chmod +x /usr/local/bin/vless-mgr
}

